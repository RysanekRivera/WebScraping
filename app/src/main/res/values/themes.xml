<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WebScraping" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="android:navigationBarColor">@null</item>
        <!-- Customize your theme here. -->
        
    </style>
    
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.MaterialCardView"/>
    
    <style name="CardViewStyle.Cut" parent="CardViewStyle">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Cut</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">@dimen/inner_cardview_corner_size</item>
        <item name="cornerSizeTopRight">@dimen/inner_cardview_corner_size</item>
        <item name="cornerSizeBottomLeft">@dimen/inner_cardview_corner_size</item>
        <item name="cornerSizeBottomRight">@dimen/inner_cardview_corner_size</item>
    </style>
</resources>